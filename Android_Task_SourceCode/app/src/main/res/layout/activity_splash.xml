    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/pv_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2E2E2E"
        pv:pv_background_color="#2E2E2E"
        pv:pv_host_text="NetEase"
        pv:pv_particle_text="在校学习任务"
        pv:pv_host_text_size="36sp"
        pv:pv_particle_text_size="20sp"
        pv:pv_text_color="#FFF"
        pv:pv_text_anim_time="1200"
        pv:pv_spread_anim_time="1200"
        pv:pv_host_text_anim_time="1200"/>

</LinearLayout>
